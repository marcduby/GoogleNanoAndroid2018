<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.udacity.movieposter.p02_movieposterv1.MovieDetailActivity">

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="400dp"
            android:layout_height="486dp"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:contentDescription="@string/movie_picture_content_description"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/name_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_name_label"
            style="@style/labelView" />

        <TextView
            android:id="@+id/main_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/detailView"/>

    </LinearLayout>
</ScrollView>