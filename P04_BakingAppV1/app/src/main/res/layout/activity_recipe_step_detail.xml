<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<fragment xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/recipe_step_list_fragment"-->
        <!--android:name="com.doobs.baking.RecipeStepDetailFragment"/>-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/prev_next_buttons_layout"
        android:id="@+id/recipe_step_detail_fragment_container"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/prev_next_buttons_layout"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:textAllCaps="false"
            android:id="@+id/ingredient_list_previous_step_button"
            android:text="@string/previous_step_button_label"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:textAllCaps="false"
            android:id="@+id/ingredient_list_next_step_button"
            android:text="@string/next_step_button_label"/>

    </LinearLayout>
</RelativeLayout>